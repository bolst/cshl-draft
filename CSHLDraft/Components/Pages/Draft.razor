<MudGrid Spacing="2">
    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert>
        <MudItem xs="3">
            <MudPaper Width="100%" Height="90vh" Class="mud-theme-surface" Elevation="3">
                @* <CurrentTeamDraftBoard /> *@
                currnet team
            </MudPaper>
        </MudItem>
    </MudHidden>
    <MudItem xs="12" md="7">
        <MudPaper Width="100%" Height="90vh" Class="mud-theme-surface" Elevation="3">
            @* <PlayerTable Disabled="_disabled" /> *@
            payer tabl
        </MudPaper>
    </MudItem>
    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert>
        <MudItem xs="2">
            <MudPaper Width="100%" Height="90vh" Class="mud-theme-surface" Elevation="3">
                @* <DraftStatus /> *@
                staus
            </MudPaper>
        </MudItem>
    </MudHidden>
</MudGrid>


@code {
    
    [Parameter]
    public string? DraftIdStr { get; set; }

    private Guid DraftId;

    private bool _disabled;
    private Data.CSHLDraft? _draft;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(DraftIdStr) || !Guid.TryParse(DraftIdStr, out DraftId))
        {
            Navigation.NavigateTo("/");
            return;
        }

        await LoadDataAsync();
        await base.OnInitializedAsync();
    }


    private async Task LoadDataAsync()
    {
        _draft = await CSHLData.GetDraftByIdAsync(DraftId);
        if (_draft is null) return;

        _disabled = _draft.State == Data.DraftState.Inactive;
        await InvokeAsync(StateHasChanged);
    }


    protected override void AddHubHandlers()
    {
        Hub.On(Data.DraftHub.Events.OnDraftStateChange, async () =>
        {
            await LoadDataAsync();
            await InvokeAsync(StateHasChanged);
        });
    }

}